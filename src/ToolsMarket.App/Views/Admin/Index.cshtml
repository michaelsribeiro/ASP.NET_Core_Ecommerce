@model IEnumerable<ToolsMarket.App.ViewModels.PedidoViewModel>

@{
    ViewData["Title"] = "Painel Administrativo -";
}

<div class="container account">
    <h4 style="font-weight: 600;">Dashboard</h4>
    <div class="row mt-5">
        <div class="cards">
            <div class="card" style="width: 18rem; padding: 25px 15px;">
                <div class="card-body" style="display: flex; flex-direction: row;">
                    <div class="icon-body" style="display: flex; align-content: center; justify-content: center; padding-right: 5px;">
                        <div class="icon-card">
                            <span>R$</span>
                        </div>
                    </div>
                    <div class="data-body" style="padding-left: 5px;">
                        <h5 class="card-title">Total de Vendas</h5>
                        <p class="card-text">@Model.ValorTotal</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>