<div class="container mt-5">
    <h3 class="text-center mb-4">Em Destaque</h3>
    <div class="owl-carousel owl-theme">
        @foreach (var item in Model)
        {
            <div class="item">
                <div class="card" style="box-sizing: border-box">
                    <div class="card-img-top d-flex align-content-center justify-content-center" style="width: 100%; overflow: hidden;">
                        <a href="@Url.Action("Details", "Produtos", new { id = item.Id })"> <img src="~/images/produtos/@item.Imagem" alt="@item.Imagem " class="w-100" style="width: 100%; height: 320px;" /></a>
                    </div>
                    <a href="@Url.Action("Details", "Produtos", new { id = item.Id })">
                        <div class="card-title">
                            <h6 class="product-name">@item.Nome</h6>
                        </div>
                        <div class="card-preco">
                            <p class="produto-preco">@item.ValorUnitario.ToString("C")</p>
                        </div>
                        <div class="card-forma-pgt">
                            <p class="forma-pgt"><strong>à vista com desconto</strong> ou <strong>10x</strong> de <strong>R$</strong> sem Tarifa</p>
                        </div>
                    </a>
                    <div class="card-action">
                        <input class="qtd" type="text" value="1" placeholder="1"/>                        
                            <button type="button" class="btn" asp-page="/carrinho/adicionar" asp-page-handler="Adicionar" asp-route-id="@item.Id">Adicionar ao Carrinho</button>                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
