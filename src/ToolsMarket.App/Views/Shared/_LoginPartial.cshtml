@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity?.Name!</a>
    </div>
    <fiv class="item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark text-uppercase" style="font-size: .8rem;">Sair</button>
        </form>
    </fiv>
}
else
{
    <div class="item d-flex align-items-center">
        <a class="nav-link text-dark text-uppercase" style="font-size: .8rem;" asp-area="Identity" asp-page="/Account/Register">Cadastro</a>
    </div>
    <div class="item d-flex align-items-center">
        <a class="nav-link text-dark text-uppercase" style="font-size: .8rem;" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </div>
}

