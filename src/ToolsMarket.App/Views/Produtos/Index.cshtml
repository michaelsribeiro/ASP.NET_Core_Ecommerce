@model IEnumerable<ToolsMarket.App.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos -";
}

<div class="container pt-5 pb-5">
    <h4>@ViewData["Title"]</h4>

    <p>
        <a class="btn btn-primary mb-4 mt-4" asp-action="Create">Novo Produto</a>
    </p>
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th class="fw-normal text-center">
                </th>
                <th class="fw-normal text-center">
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th class="fw-normal text-center">
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th class="fw-normal text-center">
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </th>
                <th class="fw-normal text-center">
                    @Html.DisplayNameFor(model => model.ValorUnitario)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        <img style="width: 90px; height: 90px" src="~/images/produtos/@item.Imagem" alt="@item.Imagem" />
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Categoria.NomeCategoria)
                    </td>
                    <td class="text-center">
                        @item.ValorUnitario.ToString("C")
                    </td>
                    <td class="text-center">
                        <a class="btn-sm btn-info text-decoration-none" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                        <a class="btn-sm btn-warning text-decoration-none" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-edit"></span></a>
                        <a class="btn-sm btn-danger text-decoration-none" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>